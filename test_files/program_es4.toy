

int n:=1;


proc calcola_int (int x,  y, operazione) void:
    int result:=0;
    if operazione=1 then
        result:= x+y;
    elif operazione=2 then
        result:= x-y;
    elif operazione=3 then
        result:= x*y;
    elif operazione=4 then
        result:= x/y;
    else
        write("ok");
    fi;

    write("Risultato di",x, " e ", y," :\n ",result);

    ->
corp;

proc calcola_double (float x, y; int operazione) void:
    float result:=0.0;

    if operazione=1 then
            result:= x+y;
        elif operazione=2 then
            result:= x-y;
        elif operazione=3 then
            result:= x*y;
        elif operazione=4 then
            result:= x/y;
        else
            write("ok");
        fi;

    write("Risultato di",x, " e ", y," :\n ",result);
    ->
corp;



proc main () void:
    int operazione, tipo_num:=0;
    int x, y:=0;
    float z,w:=0.0;
    bool flag :=false;

    while n=1 do
        flag:=false;
        if n <> 0 then
            write("Scegli operazione aritmetrica: ");
            write("\n 1 = somma, 2 = differenza, 3 = moltiplicazione, 4 = divisione");
            readln(operazione);

            write("Operazioni effettui su interi o double, 1 o 2");
            readln(tipo_num);
            if tipo_num=1 then

                write("\n Inserisci il primo numero: \n");
                readln(x);
                write("\n Inserisci il secondo numero: \n");
                readln(y);

                calcola_int(x,y, operazione);
            fi;

            if tipo_num=2 then

                write("\n Inserisci il primo numero: \n");
                readln(z);
                write("\n Inserisci il secondo numero: \n");
                readln(w);

                calcola_double(z,w, operazione);
            fi;


            while flag=false do
                write("Vuoi continuare: inserisci 0 per terminare altrimenti 1.\n");
                readln(n);
                if n=0 then
                    write(" Arrivederci\n\n");
                    flag:=true;
                elif n=1 then
                    flag:=true;
                else
                    flag:=false;
                    n:=0;
                fi;
            od;

        fi;

    od;
    ->

corp;



